{
  "name": "waterwings-api",
  "version": "0.1.0",
  "private": true,
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "6.2.1"
  },
  "scripts": {
    "db:create_migration": "sh ./scripts/create_migration.sh",
    "db:migrate": "export PGPASSWORD=password; ./migrations/migrations.sh localhost quartermasterdb root",
    "seed:company": "export PGPASSWORD=password; psql -h localhost -d quartermasterdb -U root -f ./seeds/companySeed.sql",
    "db:drop": "export PGPASSWORD=password; sh ./scripts/dropTable.sh localhost quartermasterdb root",
    "db:recreate": "npm run db:drop; npm run db:migrate; npm run seed:company",
    "start": "NODE_ENV=production node ./app/index.js | ./node_modules/.bin/bunyan -o short",
    "dev": "NODE_ENV=development DEBUG=koa:* ./node_modules/.bin/nodemon ./app/index.js | ./node_modules/.bin/bunyan -o short",
    "test": "NODE_ENV=test ava --tap | tap-nyan"
  },
  "author": "Rohan Nair",
  "ava": {
    "files": [
      "./app/test.js"
    ]
  },
  "dependencies": {
    "aws-sdk": "^2.3.18",
