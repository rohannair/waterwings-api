    "co-multipart": "^2.0.0",
    "dotenv": "^2.0.0",
    "forever": "^0.15.2",
    "fs-readfile-promise": "3.0.0",
    "googleapis": "^9.0.0",
    "isomorphic-fetch": "2.2.1",
